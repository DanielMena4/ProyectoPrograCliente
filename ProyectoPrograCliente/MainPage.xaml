<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoPrograCliente.MainPage">
    <CollectionView x:Name="MonsterList">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="{Binding MonsterName}" FontSize="20" FontAttributes="Bold" />
                        <Label Text="{Binding MonsterType1}" />
                        <Label Text="{Binding MonsterType2}" />
                        <Label Text="HP: {Binding MonsterCurrentHealth} / {Binding MonsterHealth}" />
                        <Label Text="ATK: {Binding MonsterAttack} | DEF: {Binding MonsterDefense}" />
                        <Label Text="SATK: {Binding MonsterSpecialAttack} | SDEF: {Binding MonsterSpecialDefense}" />
                        <Label Text="SPD: {Binding MonsterSpeed}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
